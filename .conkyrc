conky.config = {
    alignment = 'top_left',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = '3f7a1b',
    default_outline_color = 'black',
    default_shade_color = 'black',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = true,
    draw_shades = true,
    use_xft = true,
    font = 'Ubuntu Mono:size=16',
    gap_x = -1680,
    gap_y = 290,
    minimum_height = 300,
	minimum_width = 500,
    net_avg_samples = 2,
    no_buffers = false,
    double_buffer = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 2.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false,
}

conky.text = [[
$color Hi MR.
 
${color 3f7a1b}Pc name:$color $sysname 
${color 3f7a1b}Pc name:$color $kernel on $machine 

$hr

${color 3f7a1b}Networking:
Up:$color ${upspeed enx000ec89e8672} ${color 3f7a1b} - Down:$color ${downspeed enx000ec89e8672}

$hr
${color 3f7a1b}Uptime:$color $uptime
${color 3f7a1b}Frequency (in MHz):$color $freq
${color 3f7a1b}Frequency (in GHz):$color $freq_g
${color 3f7a1b}RAM Usage:
$color $mem/$memmax - $memperc% ${membar 15}
${color 3f7a1b}Swap Usage:
$color $swap/$swapmax - $swapperc% ${swapbar 15}
${color 3f7a1b}CPU Usage:
$color $cpu% ${cpubar 15}

$hr
${color 3f7a1b}Processes:$color $processes  ${color 3f7a1b}Running:$color $running_processes
${color 3f7a1b}File systems: 
    Used    From
  $color${fs_used /}/${fs_size /} ${fs_bar 15 /}

$hr

${color 3f7a1b}Name              PID   CPU%   MEM%
${color 3f7a1b} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color 3f7a1b} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color 3f7a1b} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color 3f7a1b} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
]]
